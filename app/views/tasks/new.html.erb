<h2>Create a new task</h2>
<%= simple_form_for(@task) do |f|  %>
    <%= f.input :title, label: "Name of Task" %>
    <%= f.input :details, placeholder: "Write a short description about your task" %>
     <%= f.button :submit%>
<% end %>
<%= link_to "Back to list", tasks_path %>
<%= link_to "Add another task", tasks_new_path %>

<%= render 'form', task: @task %>